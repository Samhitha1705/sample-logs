pipeline {
    agent any

    environment {
        SPLUNK_HEC_URL = 'https://127.0.0.1:8088/services/collector/event'
        SPLUNK_HEC_TOKEN = credentials('3366c860-b822-4ee9-8cfe-398871d88cc5')  // Your Splunk HEC token from Jenkins credentials
        SPLUNK_INDEX = 'jenkinsgit_logs'
        SERVICENOW_CREDS = credentials('servicenow-creds') // Replace with actual Jenkins credential ID for ServiceNow
    }

    stages {
        stage('Checkout') {
            steps {
                echo 'Checking out code...'
                checkout scm
                sendToSplunk("Code checkout completed")
            }
        }

        stage('Install Dependencies') {
            steps {
                bat "npm install"
                sendToSplunk("Dependencies installed successfully")
            }
        }

        stage('Run Tests') {
            steps {
                script {
                    def packageJson = readJSON file: 'package.json'
                    if (packageJson.scripts?.test) {
                        bat "npm test"
                        sendToSplunk("Tests executed successfully")
                    } else {
                        echo 'No test script defined in package.json'
                        sendToSplunk("No test script defined")
                    }
                }
            }
        }

        stage('Deploy') {
            steps {
                script {
                    echo "Deploying..."
                    bat """
                        curl -k -X POST "%SPLUNK_HEC_URL%" ^
                        -H "Authorization: Splunk %SPLUNK_HEC_TOKEN%" ^
                        -d "{\\"event\\": \\"Deployment Started\\", \\"index\\": \\"%SPLUNK_INDEX%\\"}"
                    """
                    sendToSplunk("Deployment triggered")
                }
            }
        }

        stage('Create ServiceNow Incident') {
            when {
                expression { currentBuild.result == 'FAILURE' }
            }
            steps {
                script {
                    bat """
                    curl -X POST "https://dev329656.service-now.com/api/now/table/incident" ^
                    --user "${SERVICENOW_CREDS_USR}:${SERVICENOW_CREDS_PSW}" ^
                    -H "Content-Type: application/json" ^
                    -d "{ \\
                        \\"short_description\\": \\"Jenkins Pipeline Failure\\", \\
                        \\"description\\": \\"Build #${env.BUILD_NUMBER} failed during the pipeline.\\", \\
                        \\"urgency\\": \\"2\\", \\
                        \\"impact\\": \\"2\\", \\
                        \\"caller_id\\": \\"6816f79cc0a8016401c5a33be04be441\\" \\
                    }"
                    """
                    sendToSplunk("ServiceNow incident created for pipeline failure")
                }
            }
        }
    }

    post {
        failure {
            script {
                sendToSplunk("Pipeline FAILED at stage: ${env.STAGE_NAME}")
            }
        }

        always {
            cleanWs()
        }
    }
}

// ðŸ‘‡ Shared function to send logs to Splunk
def sendToSplunk(message) {
    bat """
        curl -k -X POST "${env.SPLUNK_HEC_URL}" ^
        -H "Authorization: Splunk ${env.SPLUNK_HEC_TOKEN}" ^
        -H "Content-Type: application/json" ^
        -d "{ \\"event\\": \\"${message}\\", \\"index\\": \\"${env.SPLUNK_INDEX}\\" }"
    """
}
